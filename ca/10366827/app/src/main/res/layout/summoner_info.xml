<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/colorPrimary"
    android:id="@+id/summoner_info"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#FFFFFF"
            android:padding="1dp"
            android:id="@+id/summoner_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/summoner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/summoner_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="summonerLevel"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ranked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ranked" />

        <TextView
            android:id="@+id/leaguePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leaguePoints"/>

        <TextView
            android:id="@+id/wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wins"/>

        <TextView
            android:text="losses"
            android:id="@+id/losses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>